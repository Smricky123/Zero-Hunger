@model IEnumerable<Zero_Hunger.Models.CollectReq>

@{
    ViewBag.Title = "Index";
}

<h2>Collect Requests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Restaurant Name
        </th>
        <th>
            Address
        </th>
        <th>
            Request Date
        </th>
        <th>
            Collection Date
        </th>
        <th>
            Employee Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RestaurantName</td>
            <td>@item.Address</td>
            <td>@item.RequestDate</td>
            <td>@item.CollectionDate</td>
            
            <td>
                @if (item.EmployeeId != null)
                {
                    @item.Employee.Name
                }
                else
                {
                    @Html.ActionLink("Assign", "Assign", new { id = item.Id })
                }
            </td>
            <td>@Html.ActionLink("Remove Employee", "RemoveEmployee", new { id = item.Id })</td>

        </tr>
    }
</table>

